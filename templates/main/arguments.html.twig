<section id="arguments">
	<div class="container text-center">
		<div class="row">
			<div class="col-md-12">
				<h1>Pourquoi MAD Studio ?</h1>
				<p>Parce que mon travail est de mettre le votre en avant !</p>
			</div>
			{% for argument in arguments %}
			<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
				<div class="card-deck">
					<div class="card">
						<img src="{{ vich_uploader_asset(argument, 'iconFile') }}" class="card-img-top icon-argument" alt="...">
						<div class="card-body d-flex align-items-stretch flex-column pt-0">
							<h5 class="card-title text-center mb-0">{{ argument.title }}</h5>
            	    	    <p class="card-text">{{ argument.content|raw }}</p>
						</div>
				</div>
			</div>

			</div>
			{% endfor %}
		</div>
	</div>
</section>

