<section id="arguments" class="section section5">
	<div class="container pt-5">
  		<div class="mx-md-5">
    		<div class="row d-flex justify-content-center">
      			<h1 class="font-weight-bold pb-4">Title ?</h1>
    		</div>
    		<div class="row text-center mt-4">
			{% for argument in arguments %}
      			<div class="col-lg-3 col-md-6 mb-lg-0 mb-5">
        			<img src="{{ vich_uploader_asset(argument, 'iconFile') }}" class="icon-argument" alt="...">
        			<h3 class="mb-4">{{ argument.title }}</h3>
        			<p class="px-2 mb-lg-0">{{ argument.content|raw }}</p>
      			</div>
			{% endfor %}
			</div>
		</div>
	</div>
</section>

