{% extends "base.html.twig" %}

{% block title %}Page contact{% endblock %}

{% form_theme form _self %}

{% block body %}

<section id="contact">

<div class="container">
    <div class="row">
        <div class="col">
        <div class="entete-formulaire">
            <h2>Contact</h2>
            <p>Une question, une demande de devis ? <br>
               Laissez-moi un message, je vous r√©pondrai au plus vite !
            </p>

            {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} d-inline-flex">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
            {% endfor %}
        </div>

        <div class="formulaire">
            {{ form_start(form) }}

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.lastname) }}                    
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.compagny) }}
                    {{ form_widget(form.compagny) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.mail) }}
                {{ form_widget(form.mail) }}
            </div>

            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
            </div>
            </div>


                {{ form_widget(form.checkmessage) }}

            <div class="mt-3">
                {{ form_widget(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>

    </div>
</div>

</section>
{% endblock %}


