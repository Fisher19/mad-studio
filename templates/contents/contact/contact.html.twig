{% extends "base.html.twig" %}

{% block title %}Page contact{% endblock %}

{% form_theme form _self %}

{% block body %}

<section id="contact">

<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <h2 class="mb-3"><i class="fas fa-paper-plane"></i> Contactez-moi</h2>

            {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} d-inline-flex">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
            {% endfor %}

            <div>
                <p>Besoin de renseignements complémentaires ? <br>
                   Une demande de devis ? <br>
                </p>
                <p>Remplissez le formulaire ou envoyez-moi un message à l'adresse indiquée.</p>
                <hr>
                <div class="mb-3">
                    <a href="mailto:contact@madstudio.fr">contact@madstudio.fr</a>
                </div>
                <div class="mt-5">
                    <img src="/images/i-2.jpg" alt="" class="img-fluid">
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="formulaire">
                {{ form_start(form) }}

                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.lastname) }}                    
                        {{ form_widget(form.lastname) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.compagny) }}
                        {{ form_widget(form.compagny) }}
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.mail) }}
                    {{ form_widget(form.mail) }}
                </div>

                <div class="form-group pt-2">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                </div>

                <div class="text-center mt-3">
                    {{ form_widget(form.checkmessage) }}
                </div>
                
                <div class="text-center mt-3">
                    {{ form_widget(form.submit) }}
                </div>

            </div>

            {{ form_end(form) }}
        </div>

    </div>
    
</div>

</section>



{% endblock %}


