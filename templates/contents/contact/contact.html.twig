{% extends "base.html.twig" %}

{% block title %}Page contact{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container-fluid" id="contact">
    <div class="row">
        <div class="col-lg-12 col-md-12 ml-auto left-text bloc-contact bg-success">
                <div class="left-center-part text-center">
                    <h2>Contact</h2>
                    <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Est fugit rem quidem aliquid sapiente
                    </p>

            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            {{ form_start(form) }}

                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.lastname) }}                    
                        {{ form_widget(form.lastname) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.firstname) }}
                        {{ form_widget(form.firstname) }}
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.compagny) }}
                        {{ form_widget(form.compagny) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.mail) }}
                    {{ form_widget(form.mail) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.checkmessage) }}
                </div>

                {{ form_widget(form.submit) }}

                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

