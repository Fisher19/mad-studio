{% extends "base.html.twig" %}

{% block title %}Site internet{% endblock %}

{% block body %}

<section id="site">
  <div class="container site-container text-center mb-5">
    <hr class="hr-left">
    <h1 class="">Cr√©ation de site</h1>
    <hr class="hr-right">
  </div>
  <div class="container text-center pb-5">
    <div class="carousel slide" id="carousel-site-content" data-ride="carousel" data-interval="7000">
      <div class="carousel-inner text-center">
      {% for site in sites %}
        <div class="carousel-item{% if loop.index0 == 0 %} active {% endif %}">
          <div class="row align-items-center">
            <div class="col-2 pl-5 d-none d-lg-block">
              <p class="mb-0"></p>
            </div>
            <div class="col-lg-8 bg-light p-5">
              <h2 class="">{{ site.title }}</h2>
              <p class="px-2">{{ site.content|raw }}</p>
              <a href="{{ path('contact_index') }}" class="btn btn-primaire">Demander un devis</a>
            </div>
            <div class="col-2 pr-5 d-none d-lg-block">
              <p class="mb-0"></p>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
      <div>
        <a class="carousel-control-prev justify-content-start" href="#carousel-site-content" role="button" data-slide="prev">
          <i class="fas fa-arrow-alt-circle-left arrow-site"></i>
          <span class="sr-only">Precedent</span>
        </a>
        <a class="carousel-control-next justify-content-end" href="#carousel-site-content" role="button" data-slide="next">
          <i class="fas fa-arrow-alt-circle-right arrow-site"></i>
          <span class="sr-only">Suivant</span>
        </a>
      </div>
    </div>
  </div>
</section>

{% include "/partials/footer.html.twig" %}

{% endblock %}