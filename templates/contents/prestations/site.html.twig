<section id="site" class="section-fix">
  <div class="container">

    <div id="carousel-content-site" class="carousel slide carousel-fade" data-ride="carousel">

      <ol class="carousel-indicators">
        <li data-target="#carousel-content-site" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-content-site" data-slide-to="1"></li>
        <li data-target="#carousel-content-site" data-slide-to="2"></li>
        <li data-target="#carousel-content-site" data-slide-to="3"></li>
      </ol>

      <div class="carousel-inner" role="listbox">
        {% for site in sites %}
        <div class="carousel-item {% if loop.index0 == 0 %} active {% endif %}">

          <div class="view">
            <img class="d-block w-100" src="/images/n.jpg"
              alt="First slide">
            <div class="mask rgba-black-light"></div>
          </div>
          <div class="carousel-caption mb-3">
            <h3 class="h3-responsive">{{ site.title }}</h3>
            <p>{{ site.content|raw }}</p>
          </div>
        </div>
      {% endfor %} 
      </div>

      <a class="carousel-control-prev" href="#carousel-content-site" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
      </a>
      <a class="carousel-control-next" href="#carousel-content-site" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
      </a>

    </div>

