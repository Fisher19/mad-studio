{% extends 'admin/base.html.twig' %}

{% block title %}Gestion de l'Edito{% endblock %}

{% block body %}
    <div class="container p-5">
        <h4>Gérer l'édito</h4>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
            <table class="table table-sm table-hover table-bordered">
                <thead class="thead-dark text-center">
                    <tr>
                        <th>Contenu</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for edito in edito %}
                    <tr>
                        <td class="align-middle p-3">{{ edito.content|raw }}</td>
                        <td class="align-middle p-3">
                            <a href="{{ path('admin_edito_edit', {id: edito.id}) }}" class="btn btn-dark">
                                <i class="fas fa-edit my-1"></i>
                            </a>                       
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>
{% endblock %}
